{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "noEmit": true,
    "target": "es6",
    "skipLibCheck": true,
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "strict": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "~*": [
        "./src/*"
      ]
    }
  },
  "include": ["src/**/*", "./App.tsx"],
  "exclude": [
    "node_modules"
  ]
}
